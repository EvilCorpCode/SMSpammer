<resources>
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_x_medium</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Text.Title">
        <item name="android:layout_margin">@dimen/margin_xx_small</item>
        <item name="android:textSize">@dimen/textSize_xxxx_medium</item>
    </style>

    <style name="Text.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.White.Title">
        <item name="android:layout_margin">@dimen/margin_xx_small</item>
        <item name="android:textSize">@dimen/textSize_xxxx_medium</item>
    </style>

    <style name="Text.White.Title.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.Content">
        <item name="android:textSize">@dimen/textSize_x_medium</item>
    </style>

    <style name="Text.Content.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.White.Content">
        <item name="android:textSize">@dimen/textSize_x_medium</item>
    </style>

    <style name="Text.White.Content.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
