<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evilcorpcode.smspammer">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.evilcorpcode.smspammer.ui.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.evilcorpcode.smspammer.ui.activities.ContactsSelectionActivity"
            android:label="@string/title_activity_contacts_selection"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.evilcorpcode.smspammer.ui.activities.SavedMessagesListActivity"
            android:label="@string/title_activity_saved_messages"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.evilcorpcode.smspammer.ui.activities.AddCategoryActivity"
            android:label="@string/title_activity_add_new_messages_with_category"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.evilcorpcode.smspammer.ui.activities.EditSavedCategoryActivity"
            android:label="@string/title_activity_edit_saved_messages_with_category"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>
</manifest>
